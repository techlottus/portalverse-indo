{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/pages/*": [
        "./pages/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/icons/*": [
        "./public/icons/*"
      ],
      "@/forms/*": [
        "./forms/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/config/*": [
        "./config/*"
      ],
      "@/api/*": [
        "./pages/api/*"
      ],
      "@/multitenant-images": [
        "./multitenant-images.ts"
      ],
      "@/multitenant-errors": [
        "././multitenant-errors.ts"
      ],
      "@/general-config": [
        "./GeneralConfig.ts"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-sitemap.config.js",
    "utils/fetch-multitenant.js",
    "multitenant-images.ts",
    "multitenant-errors.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
